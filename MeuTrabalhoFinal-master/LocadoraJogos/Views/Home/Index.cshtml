<!-- New Product -->
<section class="newproduct bgwhite p-t-45 p-b-105">
    <div class="container">
        <div class="sec-title p-b-60">
            <h3 class="m-text5 t-center">
                Produtos
            </h3>
        </div>

        <!-- Slide2 -->
        
            <div class="wrap-slick2">
                <div class="slick2">
                    @foreach (var produto in ViewBag.Produtos)
                    {
                        <div class="item-slick2 p-l-15 p-r-15">
                            <!-- Block2 -->
                            <div class="block2">
                                <div class="block2-img wrap-pic-w of-hidden pos-relative block2-labelnew">

                                    
                                        @{
                                            string oQueGuardar = "";
                                            if (produto.Imagem != null)

                                            {
                                                var base64 = Convert.ToBase64String(produto.Imagem);
                                                var extensao = "png";


                                                oQueGuardar = $"data:image/{extensao};base64,{base64}";
                                            }

                                        }
                                        <img src="@oQueGuardar" /> <!-- Mostra a imagem-->
                                    

                                    <div class="block2-overlay trans-0-4">
                                        @*<a href="/Produto/Index" class="block2-btn-addwishlist hov-pointer trans-0-4">
                                            <i class="icon-wishlist icon_heart_alt" aria-hidden="true"></i>
                                            <i class="icon-wishlist icon_heart dis-none" aria-hidden="true"></i>
                                        </a>*@

                                        <div class="block2-btn-addcart w-size1 trans-0-4">
                                            <!-- Button -->

                                            <button class="flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4">
                                                @Html.ActionLink("Adicionar ao Carrinho", "AdicionarCarrinho", "Carrinho", new { id = produto.Id }, null)
                                            </button>

                                        </div>
                                    </div>

                                </div>


                                <div class="block2-txt p-t-20">

                                    <a href="../Produto/Index" class="block2-name dis-block s-text3 p-b-5">
                                        @produto.Nome
                                    </a>

                                    <span class="block2-price m-text6 p-r-5">
                                        r$@produto.Preco
                                    </span>
                                </div>
                            </div>
                        </div>

                    }
                    </div>
            </div>

        </div>
                    
</section>